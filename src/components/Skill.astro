---
interface Props {
    imgSrc: string;
    name: string;
}
const { imgSrc, name } = Astro.props 
---
<div class="flex flex-col justify-center items-center w-auto h-fit">
    <img class="w-[2.5rem] hover:scale-125 transition-transform duration-300" src={ imgSrc } alt={ name + " logo" } />
    <span class="text-base hidden md:block">{ name }</span>
</div>