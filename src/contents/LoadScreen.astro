---

<div class="loaderBg">
  <div class="loader"></div>
</div>
<div id="page">
  <slot>
</div>
  <style>
    #page {
      display: none;
    }

    .loaderBg {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100dvh;
      width: 100dvw;
      background-color: #040404;
      position: fixed;
      z-index: 1000;
    }

    .loader {
      width: 4rem;
      aspect-ratio: 1;
      display: grid;
      border: 4px solid #0000;
      border-radius: 50%;
      border-right-color: #7a7a7f;
      animation: l15 1s infinite linear;
    }

    .loader::before,
    .loader::after {
      content: "";
      grid-area: 1/1;
      margin: 2px;
      border: inherit;
      border-radius: 50%;
      animation: l15 2s infinite;
    }

    .loader::after {
      margin: 8px;
      animation-duration: 3s;
    }

    @keyframes l15 {
      100% {
        transform: rotate(1turn);
      }
    }
  </style>

  <script>
    const loader = document.querySelector(".loaderBg");
    const page = document.getElementById("page");
    window.addEventListener("load", () => {
      if(page !== null) page.style.display = "block";
      loader?.remove();
    });
  </script>
</slot>
